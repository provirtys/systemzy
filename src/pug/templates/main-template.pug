// ui
include ~@mixins/test-mixin
include ~@mixins/show-all
include ~@mixins/contacts
include ~@mixins/fixed-block

block vars

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    title #{title}
  body
    include ~@components/header.pug
    main
      block content
    include ~@components/footer.pug
    +fixed-block('block1')
    +fixed-block('block2')
